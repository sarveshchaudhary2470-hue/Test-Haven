{
    "name": "eduxpress-root",
    "version": "1.0.0",
    "description": "Root package for EduXpress deployment",
    "scripts": {
        "install-client": "cd frontend && npm install",
        "build-client": "cd frontend && npm run build",
        "build": "npm install && npm run install-client && npm run build-client",
        "start": "node backend/server.js",
        "dev": "concurrently \"npm run start\" \"cd frontend && npm run dev\""
    },
    "engines": {
        "node": ">=16.0.0"
    },
    "dependencies": {
        "axios": "^1.13.2",
        "bcryptjs": "^3.0.3",
        "compression": "^1.8.1",
        "cors": "^2.8.5",
        "dotenv": "^17.2.3",
        "express": "^5.1.0",
        "express-rate-limit": "^8.2.1",
        "express-validator": "^7.3.1",
        "helmet": "^8.1.0",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^9.0.0",
        "node-cron": "^4.2.1",
        "nodemailer": "^7.0.11",
        "nodemon": "^3.1.11",
        "concurrently": "^8.2.2"
    }
}